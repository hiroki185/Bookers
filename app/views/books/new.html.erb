<!--投稿-->
<h1>Books</h1>

<% @books.each do |book| %>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  </thead>

 <tbody>
   <tr>
     <td></td>
     <td></td>
     <td><%= link_to "show", show_list_path(book.id) %></td>
     <td><%= link_to "Edit", edit_list_path(book.id) %></td>
     <td><%= link_to "Destroy", destroy_list_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
   </tr>

 </tbody>
</table>

<span><%= book.title %></span>

<% end %>

<h2>New book</h2>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>

