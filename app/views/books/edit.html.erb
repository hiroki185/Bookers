<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>

<%= f.text_area :body %>

<%= f.submit '保存' %>

<p>
 <%= link_to "Show", book_path(@book.id) %>
 |
 <a href='/books/new'>Back</a>
</p>

<% end %>
